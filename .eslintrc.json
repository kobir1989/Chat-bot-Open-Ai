{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier"],

  "rules": {
    "no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }],
    "indent": ["error", 2], // Enforce 3 spaces for indentation
    "quotes": ["error", "single"] // Enforce single quotes for strings
  }
}
